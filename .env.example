# Pormetheus Configuration
# Copy to .env and fill in values

PROM_APP_NAME=pormetheus
PROM_DEBUG=false
PROM_LOG_LEVEL=INFO
PROM_ENVIRONMENT=development

PROM_HOST=0.0.0.0
PROM_PORT=8000

PROM_API_KEY=your-api-key-here
PROM_OPENAI_AUTH_ENABLED=false
PROM_CORS_ORIGINS=["http://localhost:3000"]

PROM_AGENT_TIMEOUT_SECONDS=30.0
PROM_TOOL_TIMEOUT_SECONDS=15.0

PROM_RATE_LIMIT_REQUESTS=100
PROM_RATE_LIMIT_WINDOW_SECONDS=60

PROM_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
PROM_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# --- Search Agent Settings ---
# LLM Provider: "openai" | "openai_compatible" | "huggingface"
PROM_LLM_PROVIDER=openai
PROM_LLM_MODEL=gpt-4o
PROM_LLM_API_KEY=your-openai-api-key-here
# For OpenAI-compatible local models (Ollama, vLLM), set base URL:
# PROM_LLM_BASE_URL=http://localhost:11434/v1

# Search Provider: "duckduckgo" (no key needed) | "brave" (needs API key)
PROM_SEARCH_PROVIDER=duckduckgo
# PROM_SEARCH_API_KEY=your-brave-api-key-here
PROM_SEARCH_MAX_RESULTS=20

# HuggingFace local model (only when PROM_LLM_PROVIDER=huggingface)
# PROM_HF_MODEL_ID=Qwen/Qwen3-4B
# PROM_HF_DEVICE_MAP=auto
# PROM_HF_QUANTIZATION=4bit

# Memory
PROM_CONVERSATION_WINDOW_SIZE=20
PROM_SEMANTIC_MEMORY_ENABLED=true

# --- Docker Stack (used by docker-compose.openwebui.yml) ---
POSTGRES_USER=pormetheus
POSTGRES_PASSWORD=pormetheus
POSTGRES_DB=pormetheus
# These are set automatically by docker-compose, override if needed:
# PROM_DATABASE_URL=postgresql+asyncpg://pormetheus:pormetheus@postgres:5432/pormetheus
# PROM_REDIS_URL=redis://redis:6379/0
