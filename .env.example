# Barongsai Configuration
# Copy to .env and fill in values

BGS_APP_NAME=barongsai
BGS_DEBUG=false
BGS_LOG_LEVEL=INFO
BGS_ENVIRONMENT=development

BGS_HOST=0.0.0.0
BGS_PORT=8000

BGS_API_KEY=your-api-key-here
BGS_OPENAI_AUTH_ENABLED=false
BGS_CORS_ORIGINS=["http://localhost:3000"]

BGS_AGENT_TIMEOUT_SECONDS=30.0
BGS_TOOL_TIMEOUT_SECONDS=15.0

BGS_RATE_LIMIT_REQUESTS=100
BGS_RATE_LIMIT_WINDOW_SECONDS=60

BGS_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
BGS_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# --- Search Agent Settings ---
# LLM Provider: "openai" | "openai_compatible" | "huggingface"
BGS_LLM_PROVIDER=openai
BGS_LLM_MODEL=gpt-4o
BGS_LLM_API_KEY=your-openai-api-key-here
# For OpenAI-compatible local models (Ollama, vLLM), set base URL:
# BGS_LLM_BASE_URL=http://localhost:11434/v1

# Search Provider: "duckduckgo" (no key needed) | "brave" (needs API key)
BGS_SEARCH_PROVIDER=duckduckgo
# BGS_SEARCH_API_KEY=your-brave-api-key-here
BGS_SEARCH_MAX_RESULTS=20

# HuggingFace local model (only when BGS_LLM_PROVIDER=huggingface)
# BGS_HF_MODEL_ID=Qwen/Qwen3-4B
# BGS_HF_DEVICE_MAP=auto
# BGS_HF_QUANTIZATION=4bit

# Memory
BGS_CONVERSATION_WINDOW_SIZE=20
BGS_SEMANTIC_MEMORY_ENABLED=true

# --- Docker Stack ---
POSTGRES_USER=barongsai
POSTGRES_PASSWORD=barongsai
POSTGRES_DB=barongsai
# These are set automatically by docker-compose, override if needed:
# BGS_DATABASE_URL=postgresql+asyncpg://barongsai:barongsai@postgres:5432/barongsai
BGS_REDIS_URL=redis://localhost:6379/0
